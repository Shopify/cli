{
  "name": "@shopify/create-hydrogen",
  "version": "0.13.0",
  "private": false,
  "description": "A CLI tool to create a new Hydrogen storefront",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners",
    "shopify-apps"
  ],
  "license": "MIT",
  "types": "dist/index.d.ts",
  "bin": {
    "create-app": "./bin/run.js"
  },
  "files": [
    "/templates",
    "/bin/run.js",
    "/bin/run.cmd",
    "/dist",
    "templates",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "rollup -c",
    "prepack": "cross-env NODE_ENV=production yarn run build",
    "lint": "prettier -c src/** && eslint src/**/*.ts",
    "lint:fix": "prettier src/** -w && eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {
    "@bugsnag/js": "^7.14.1",
    "@shopify/hydrogen": "0.5.2",
    "@oclif/core": "1.3.3",
    "@oclif/plugin-plugins": "2.1.0",
    "@oclif/plugin-help": "^5.1.11"
  },
  "devDependencies": {
    "enquirer": "^2.3.6",
    "kolorist": "^1.5.1",
    "minimist": "^1.2.5"
  },
  "engine-strict": true,
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "bin": "create-hydrogen",
    "commands": "./dist/commands"
  }
}
