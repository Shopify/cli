{
  "name": "@shopify/create-hydrogen",
  "version": "3.5.0",
  "private": false,
  "description": "A CLI tool to create a new Shopify hydrogen app.",
  "type": "module",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners",
    "shopify-hydrogen"
  ],
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "create-hydrogen": "./bin/run.js"
  },
  "files": [
    "/bin/run.js",
    "/bin/run.cmd",
    "/dist",
    "templates",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "rimraf dist/ && tsc -b ./tsconfig.build.json",
    "prepack": "cross-env NODE_ENV=production yarn run build",
    "lint": "prettier -c src/** && eslint \"src/**/*.ts\"",
    "lint:fix": "prettier -w src/** && eslint 'src/**/*.ts' --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ],
    "rules": {
      "no-warning-comments": "off"
    }
  },
  "dependencies": {
    "@oclif/core": "^1.0",
    "@shopify/cli-kit": "3.5.0",
    "@types/download": "^8.0.1",
    "download": "^8.0.0"
  },
  "devDependencies": {
    "vitest": "^0.17.1"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=14.13.1"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "bin": "create-hydrogen",
    "commands": "dist/commands",
    "additionalHelpFlags": [
      "-h"
    ],
    "hooks": {
      "prerun": "@shopify/cli-kit/node/hooks/prerun",
      "postrun": "@shopify/cli-kit/node/hooks/postrun"
    }
  }
}
