{
  "name": "@shopify/create-hydrogen",
  "version": "2.0.1",
  "private": false,
  "description": "A CLI tool to create a new Shopify hydrogen app.",
  "type": "module",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners",
    "shopify-hydrogen"
  ],
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "create-hydrogen": "./bin/run.js"
  },
  "files": [
    "/bin/run.js",
    "/bin/run.cmd",
    "/dist",
    "templates",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "rimraf dist/ && rollup -c",
    "prepack": "cross-env NODE_ENV=production yarn run build",
    "lint": "prettier -c src/** && eslint 'src/**/*.ts'",
    "lint:fix": "prettier -w src/** && eslint 'src/**/*.ts' --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ],
    "rules": {
      "no-warning-comments": "off"
    }
  },
  "dependencies": {
    "@bugsnag/js": "^7.16.2",
    "@oclif/core": "1.6.4",
    "@shopify/cli-kit": "2.0.1",
    "@types/download": "^8.0.1",
    "download": "^8.0.0"
  },
  "devDependencies": {
    "vitest": "0.9.4"
  },
  "engine-strict": true,
  "engines": {
    "node": "^14.13.1 || ^16.0.0 || ^17.0.0 || ^18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "bin": "create-hydrogen",
    "commands": "./dist/commands",
    "additionalHelpFlags": [
      "-h"
    ]
  }
}
