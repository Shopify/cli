{
  "name": "@shopify/create-hydrogen",
  "version": "1.0.0",
  "private": false,
  "description": "A CLI tool to create a new Hydrogen storefront",
  "type": "module",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners",
    "shopify-apps"
  ],
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "create-hydrogen": "./bin/run.js"
  },
  "files": [
    "/templates",
    "/bin/run.js",
    "/bin/run.cmd",
    "/dist",
    "templates",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "rollup -c",
    "prepack": "cross-env NODE_ENV=production yarn run build",
    "lint": "prettier -c src/** && eslint src/**/*.ts",
    "lint:fix": "prettier src/** -w && eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {
    "@bugsnag/js": "^7.14.1",
    "@shopify/cli-hydrogen": "1.0.0",
    "@shopify/cli-kit": "1.0.0",
    "@oclif/core": "1.3.6"
  },
  "devDependencies": {
    "enquirer": "^2.3.6",
    "kolorist": "^1.5.1",
    "minimist": "^1.2.5"
  },
  "engine-strict": true,
  "engines": {
    "node": "^14.13.1 || ^16.0.0 || ^17.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "bin": "create-hydrogen",
    "commands": "./dist/commands"
  }
}
