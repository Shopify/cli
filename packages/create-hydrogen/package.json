{
  "name": "@shopify/create-hydrogen",
  "version": "3.22.1",
  "private": false,
  "description": "A CLI tool to create a new Shopify hydrogen app.",
  "type": "module",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners",
    "shopify-hydrogen"
  ],
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "create-hydrogen": "./bin/run.js"
  },
  "files": [
    "/bin/run.js",
    "/bin/run.cmd",
    "/dist",
    "templates",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "prepack": "cross-env NODE_ENV=production yarn nx build && cp ../../README.md README.md",
    "build": "nx build",
    "clean": "nx clean",
    "lint": "nx lint",
    "lint:fix": "nx lint:fix",
    "test": "nx run create-hydrogen:test",
    "test:watch": "nx test:watch",
    "type-check": "nx type-check"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ],
    "rules": {
      "no-warning-comments": "off"
    }
  },
  "dependencies": {
    "@oclif/core": "1.9.2",
    "@shopify/cli-kit": "3.22.1",
    "download": "8.0.0"
  },
  "devDependencies": {
    "vitest": "^0.22.1",
    "@types/download": "8.0.0"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=14.17.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "bin": "create-hydrogen",
    "commands": "dist/commands",
    "additionalHelpFlags": [
      "-h"
    ],
    "hooks": {
      "prerun": "@shopify/cli-kit/node/hooks/prerun",
      "postrun": "@shopify/cli-kit/node/hooks/postrun"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shopify/cli/edit/main/packages/create-hydrogen"
  },
  "bugs": {
    "url": "https://github.com/Shopify/cli/issues/new/choose"
  }
}
