{
    "name": "cli-kit",
    "root": "packages/cli-kit",
    "sourceRoot": "packages/cli-kit/src",
    "projectType": "library",
    "tags": ["scope:foundation"],
    "targets": {
      "clean": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm rimraf dist/",
          "cwd": "packages/cli-kit"
        }
      },
      "build": {
        "executor": "nx:run-commands",
        "outputs": ["dist"],
        "inputs": ["{projectRoot}/src/**/*"],
        "options": {
          "command": "pnpm tsc -b ./tsconfig.build.json",
          "cwd": "packages/cli-kit"
        }
      },
      "lint": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm eslint \"src/**/*.ts\"; cd assets/cli-ruby; bundle install; bundle exec rake rubocop",
          "cwd": "packages/cli-kit"
        }
      },
      "lint:fix": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm eslint 'src/**/*.ts' --fix; cd assets/cli-ruby; bundle install; bundle exec rake rubocop -a",
          "cwd": "packages/cli-kit"
        }
      },
      "test": {
        "executor": "nx:run-commands",
        "dependsOn": ["build"],
        "options": {
          "command": "pnpm vitest run",
          "cwd": "packages/cli-kit"
        }
      },
      "test:coverage": {
        "executor": "nx:run-commands",
        "dependsOn": ["build"],
        "options": {
          "command": "pnpm vitest run --reporter json --coverage --outputFile ./coverage/report.json",
          "cwd": "packages/cli-kit"
        }
      },
      "test:watch": {
        "executor": "nx:run-commands",
        "dependsOn": ["build"],
        "options": {
          "command": "pnpm vitest watch",
          "cwd": "packages/cli-kit"
        }
      },
      "type-check": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm tsc --noEmit",
          "cwd": "packages/cli-kit"
        }
      }
    }
}
