{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["@types/*"]
    },
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
