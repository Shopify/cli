{
  "name": "@shopify/theme",
  "version": "0.5.2",
  "private": true,
  "description": "Utilities building and publishing themes",
  "type": "module",
  "files": [
    "/dist",
    "/npm-shrinkwrap.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "true",
    "lint": "prettier -c src/** && eslint src/**",
    "lint:fix": "prettier src/** && eslint src/** --fix",
    "test": "shx rm -rf dist && vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc -b"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@shopify/cli-kit": "0.10.0",
    "@shopify/cli-testing": "0.1.0"
  },
  "oclif": {
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ]
  }
}
