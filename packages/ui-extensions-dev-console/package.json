{
  "private": true,
  "name": "@shopify/ui-extensions-dev-console-app",
  "version": "3.22.1",
  "scripts": {
    "build": "nx build",
    "clean": "nx clean",
    "lint": "nx lint",
    "lint:fix": "nx lint:fix",
    "serve": "vite preview",
    "start": "nx start",
    "test": "nx run ui-extensions-dev-console:test",
    "test:watch": "nx test:watch"
  },
  "dependencies": {
    "@shopify/polaris": "^6.6.0",
    "@shopify/polaris-icons": "^4.6.2",
    "@shopify/react-i18n": "^6.1.0",
    "@shopify/ui-extensions-server-kit": "3.22.1",
    "@vitejs/plugin-react": "^2.0.1",
    "copy-to-clipboard": "^3.3.1",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ],
    "plugins": [
      "react",
      "jsx-a11y"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "import/extensions": [
        "error",
        "never",
        {
          "ignorePackages": true
        }
      ],
      "react/jsx-no-constructed-context-values": "error",
      "node/no-unsupported-features/node-builtins": [
        "error",
        {
          "version": ">=10.0.0",
          "ignores": []
        }
      ],
      "jsx-a11y/click-events-have-key-events": "error"
    }
  },
  "devDependencies": {
    "@shopify/react-testing": "^3.0.0",
    "@shopify/ui-extensions-test-utils": "3.22.1",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "16.14.0",
    "@types/react-dom": "^16.9.11",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "sass": "^1.42.1",
    "ts-node": "^10.2.1",
    "vite": "^2.9.13",
    "vite-tsconfig-paths": "^3.3.14",
    "vitest": "^0.22.1"
  }
}
