{
  "name": "@shopify/shopify-cli",
  "version": "0.5.0",
  "private": false,
  "description": "A CLI tool to build for the Shopify platform",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners"
  ],
  "license": "MIT",
  "types": "dist/index.d.ts",
  "bin": {
    "shopify": "./bin/shopify.mjs"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc",
    "build:watch": "tsc --watch",
    "lint": "prettier -c src/** && eslint src/**",
    "lint:fix": "prettier src/** && eslint src/** --fix",
    "test": "jest",
    "test:watch": "xxx",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.0.1"
  },
  "devDependencies": {
    "@oclif/test": "^2"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=12.0.0"
  },
  "oclif": {
    "bin": "shopify",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  }
}
