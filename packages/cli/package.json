{
  "name": "@shopify/cli",
  "version": "0.12.0",
  "private": false,
  "description": "A CLI tool to build for the Shopify platform",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners"
  ],
  "license": "MIT",
  "bin": {
    "shopify": "./bin/run.js"
  },
  "files": [
    "/bin/run.cmd",
    "/bin/run.js",
    "/dist",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "rollup -c",
    "prepack": "cross-env NODE_ENV=production yarn run build",
    "lint": "prettier -c src/** && eslint src/**/*.ts",
    "lint:fix": "prettier -w src/** && eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {
    "@bugsnag/js": "^7.14.1",
    "@oclif/core": "1.3.3",
    "@oclif/plugin-help": "^5.1.11",
    "@shopify/cli-kit": "0.12.0"
  },
  "engine-strict": true,
  "engines": {
    "node": "^14.13.1 || ^16.0.0 || ^17.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "bin": "shopify",
    "commands": "dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@shopify/app",
      "@shopify/cli-hydrogen"
    ],
    "topicSeparator": " ",
    "topics": {
      "hydrogen": { "description": "Build Hydrogen storefronts" },
      "theme": { "description": "Build Liquid themes" },
      "app": { "description": "Build Shopify apps" }
    }
  },
  "nx": {
    "implicitDependencies": ["@shopify/app", "@shopify/cli-hydrogen"]
  }
}
