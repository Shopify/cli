{
  "name": "@shopify/cli",
  "version": "0.5.0",
  "private": false,
  "description": "A CLI tool to build for the Shopify platform",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners"
  ],
  "license": "MIT",
  "types": "dist/index.d.ts",
  "bin": {
    "shopify": "./bin/shopify-run"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "build:watch": "tsc -b --watch",
    "prepublishOnly": "yarn run build",
    "lint": "prettier -c src/** && eslint src/**",
    "lint:fix": "prettier src/** && eslint src/** --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc -b --incremental"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {
    "@bugsnag/js": "^7.14.1",
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "@shopify/cli-app": "^0.5.0",
    "@shopify/cli-core": "^0.3.0",
    "@shopify/cli-support": "^0.3.0",
    "@shopify/cli-theme": "^0.3.0"
  },
  "devDependencies": {},
  "engine-strict": true,
  "engines": {
    "node": "^12 || ^14 || ^16"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "bin": "shopify",
    "plugins": [
      "@oclif/plugin-help",
      "@shopify/cli-theme",
      "@shopify/cli-app"
    ],
    "topicSeparator": " ",
    "topics": {
      "theme": {
        "description": "Commands for creating, building, and publishing themes"
      },
      "app": {
        "description": "Commands for creating, building, and publishing app"
      }
    }
  }
}
