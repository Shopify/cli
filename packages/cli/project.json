{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "library",
  "implicitDependencies": ["app", "theme"],
  "tags": ["scope:cli"],
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm rimraf dist/",
        "cwd": "packages/cli"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["dist"],
      "inputs": ["{projectRoot}/src/**/*"],
      "options": {
        "command": "pnpm tsc -b ./tsconfig.build.json",
        "cwd": "packages/cli"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm eslint \"src/**/*.ts\" 'bin/*.js' ",
        "cwd": "packages/cli"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm eslint 'src/**/*.ts' 'bin/*.js' --fix",
        "cwd": "packages/cli"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm vitest run",
        "cwd": "packages/cli"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm vitest run --reporter json --coverage --outputFile ./coverage/report.json",
        "cwd": "packages/cli"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "pnpm vitest watch",
        "cwd": "packages/cli"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm tsc --noEmit",
        "cwd": "packages/cli"
      }
    },
    "refresh-manifests": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm oclif manifest",
        "cwd": "packages/cli"
      }
    }
  }
}
