{
  "name": "@shopify/ui-extensions-server-kit",
  "version": "5.2.1",
  "packageManager": "pnpm@8.15.7",
  "private": false,
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./index.js",
      "import": "./index.mjs",
      "types": "./index.d.ts"
    },
    "./testing": {
      "require": "./testing.js",
      "import": "./testing.mjs",
      "types": "./testing.d.ts"
    }
  },
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "files": [
    "**"
  ],
  "scripts": {
    "build": "nx build",
    "clean": "nx clean",
    "lint": "nx lint",
    "lint:fix": "nx lint:fix",
    "prepack": "NODE_ENV=production pnpm nx build && cp ../../README.md README.md",
    "test": "nx run ui-extensions-server-kit:test",
    "test:watch": "nx test:watch"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "import/extensions": [
        "error",
        "never",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "devDependencies": {
    "@shopify/react-testing": "^3.0.0",
    "@shopify/ui-extensions-test-utils": "3.26.0",
    "@types/react": "17.0.2",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "jest-websocket-mock": "^2.4.0",
    "jsdom": "^20.0.3",
    "react": "^17.0.2",
    "vi-fetch": "^0.8.0",
    "vite": "5.4.17"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  }
}
