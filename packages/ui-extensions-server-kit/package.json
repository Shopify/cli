{
  "name": "@shopify/ui-extensions-server-kit",
  "version": "0.3.0",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "files": [
    "**"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./index.js",
      "import": "./index.mjs",
      "types": "./index.d.ts"
    },
    "./testing": {
      "require": "./testing.js",
      "import": "./testing.mjs",
      "types": "./testing.d.ts"
    }
  },
  "scripts": {
    "build": "yarn build:code && yarn build:types",
    "build:code": "vite build --config vite.config.ts",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "git clean --exclude node_modules -xdf ./",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "test": "jest"
  },
  "peerDependencies": {
    "react": "16.14.0"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "devDependencies": {
    "@shopify/react-testing": "^3.0.0",
    "@shopify/ui-extensions-test-utils": "^0.2.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "16.14.0",
    "@types/react-dom": "^16.9.11",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "jest": "^27.1.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-websocket-mock": "^2.2.1",
    "mock-socket": "^9.0.5",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsc": "^2.0.3",
    "typescript": "^4.6.4",
    "vite": "^2.4.4",
    "vite-tsconfig-paths": "^3.3.14"
  }
}
