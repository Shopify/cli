{
  "name": "@shopify/ui-extensions-server-kit",
  "version": "4.0.0",
  "private": false,
  "license": "MIT",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "files": [
    "**"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./index.js",
      "import": "./index.mjs",
      "types": "./index.d.ts"
    },
    "./testing": {
      "require": "./testing.js",
      "import": "./testing.mjs",
      "types": "./testing.d.ts"
    }
  },
  "scripts": {
    "prepack": "cross-env NODE_ENV=production pnpm nx build && cp ../../README.md README.md",
    "build": "nx build",
    "clean": "nx clean",
    "lint": "nx lint",
    "lint:fix": "nx lint:fix",
    "test": "nx run ui-extensions-server-kit:test",
    "test:watch": "nx test:watch"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@shopify/react-testing": "^3.0.0",
    "@shopify/ui-extensions-test-utils": "3.25.0",
    "@types/react": "17.0.2",
    "@types/react-dom": "^16.9.11",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "jest-websocket-mock": "^2.2.1",
    "jsdom": "^20.0.3",
    "mock-socket": "^9.0.5",
    "ts-node": "^10.2.1",
    "vi-fetch": "^0.8.0",
    "vite": "^2.9.13",
    "vite-tsconfig-paths": "^3.3.14",
    "vitest": "^0.23.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "@types/node": "^17.0.38",
    "typescript": "4.6.4"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "import/extensions": [
        "error",
        "never",
        {
          "ignorePackages": true
        }
      ]
    }
  }
}
