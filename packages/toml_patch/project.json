{
  "name": "toml_patch",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/toml_patch/src",
  "targets": {
    "type-check": {
      "cache": true,
      "executor": "@monodon/rust:check",
      "outputs": ["{options.target-dir}"],
      "options": {
        "target-dir": "dist/target/toml_patch"
      }
    },
    "build": {
      "inputs": ["production", "^production", "{projectRoot}/src/**/*"],
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/app/assets/wasm/toml_patch"],
      "options": {
        "command": "wasm-pack build --out-dir=\"../app/assets/wasm/toml_patch\" --target=bundler --release",
        "cwd": "packages/toml_patch"
      }
    },
    "test": {
      "cache": true,
      "executor": "@monodon/rust:test",
      "outputs": ["{options.target-dir}"],
      "options": {
        "target-dir": "dist/target/toml_patch"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "lint": {
      "cache": true,
      "executor": "@monodon/rust:lint",
      "outputs": ["{options.target-dir}"],
      "options": {
        "target-dir": "dist/target/toml_patch"
      }
    }
  },
  "tags": []
}
