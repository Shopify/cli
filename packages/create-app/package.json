{
  "name": "@shopify/create-app",
  "version": "0.3.0",
  "private": false,
  "description": "A CLI tool to create a new Shopify app.",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners",
    "shopify-apps"
  ],
  "license": "MIT",
  "types": "dist/index.d.ts",
  "bin": {
    "create-app": "./bin/run"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "build:watch": "tsc -b --watch",
    "prepublishOnly": "yarn run build",
    "lint": "prettier -c src/** && eslint src/**",
    "lint:fix": "prettier src/** && eslint src/** --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc -b --incremental"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {
    "@bugsnag/js": "^7.14.1",
    "@oclif/command": "^1",
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.0.1",
    "@shopify/cli-support": "^0.3.0",
    "@types/listr": "^0.14.4",
    "listr": "^0.14.3"
  },
  "devDependencies": {
    "@oclif/test": "^2"
  },
  "engine-strict": true,
  "engines": {
    "node": "^12 || ^14 || ^16"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "bin": "create-app",
    "commands": "./dist/commands",
    "plugins": [],
    "topicSeparator": " "
  }
}
