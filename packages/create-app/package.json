{
  "name": "@shopify/create-app",
  "version": "0.14.0",
  "private": false,
  "description": "A CLI tool to create a new Shopify app.",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners",
    "shopify-apps"
  ],
  "license": "MIT",
  "types": "dist/index.d.ts",
  "bin": {
    "create-app": "./bin/run.js"
  },
  "files": [
    "/bin/run.js",
    "/bin/run.cmd",
    "/dist",
    "templates",
    "/oclif.manifest.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "rollup -c",
    "prepack": "cross-env NODE_ENV=production yarn run build",
    "lint": "prettier -c src/** && eslint src/**/*.ts",
    "lint:fix": "prettier -w src/** && eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {
    "@bugsnag/js": "^7.14.1",
    "@oclif/core": "1.3.3",
    "@oclif/plugin-help": "^5.1.11"
  },
  "engine-strict": true,
  "engines": {
    "node": "^14.13.1 || ^16.0.0 || ^17.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "bin": "create-app",
    "commands": "./dist/commands"
  }
}
