{
  "name": "@shopify/cli-testing",
  "version": "0.1.0",
  "private": true,
  "description": "A set of utilities for writing unit tests",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "/src",
    "/npm-shrinkwrap.json"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "true",
    "lint": "prettier -c src/** && eslint src/**",
    "lint:fix": "prettier src/** && eslint src/** --fix",
    "test": "shx rm -rf dist && vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc -b"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "engine-strict": true,
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "devDependencies": {}
}
