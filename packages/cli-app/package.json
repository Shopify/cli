{
  "name": "@shopify/cli-app",
  "version": "0.2.0",
  "private": false,
  "description": "Utilities for loading, building, and publishing apps.",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners"
  ],
  "license": "MIT",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "/npm-shrinkwrap.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "build:watch": "tsc -b --watch",
    "prepublishOnly": "yarn run build",
    "lint": "prettier -c src/** && eslint src/**",
    "lint:fix": "prettier src/** && eslint src/** --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc -b --incremental"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "@shopify/cli-core": "^0.2.0",
    "@shopify/cli-support": "^0.2.0"
  },
  "engine-strict": true,
  "engines": {
    "node": "^12 || ^14 || ^16"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ]
  }
}
