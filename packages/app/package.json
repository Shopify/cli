{
  "name": "@shopify/app",
  "version": "3.22.1",
  "description": "Utilities for loading, building, and publishing apps.",
  "license": "MIT",
  "homepage": "https://github.com/shopify/cli#readme",
  "bugs": {
    "url": "https://github.com/Shopify/cli/issues"
  },
  "type": "module",
  "files": [
    "/dist",
    "/assets",
    "/templates"
  ],
  "exports": {
    "./plugins/extensions/*": {
      "import": "./dist/cli/models/extensions/*.js",
      "require": "./dist/cli/models/extensions/*.d.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "prepack": "cross-env NODE_ENV=production yarn nx build && cp ../../README.md README.md",
    "build": "nx build",
    "clean": "nx clean",
    "lint": "nx lint",
    "lint:fix": "nx lint:fix",
    "test": "nx run app:test",
    "test:watch": "nx test:watch",
    "type-check": "nx type-check"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ]
  },
  "engine-strict": true,
  "engines": {
    "node": ">=14.17.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "commands": "dist/cli/commands",
    "hooks": {
      "public_command_metadata": "./dist/cli/hooks/public_metadata",
      "sensitive_command_metadata": "./dist/cli/hooks/sensitive_metadata"
    }
  },
  "devDependencies": {
    "@types/diff": "^5.0.2",
    "@types/http-proxy": "^1.17.9",
    "@types/serve-static": "^1.15.0",
    "@types/ws": "^8.5.3",
    "@types/lodash-es": "^4.17.6",
    "vitest": "^0.22.1"
  },
  "dependencies": {
    "@luckycatfactory/esbuild-graphql-loader": "3.7.0",
    "@oclif/core": "1.9.2",
    "@shopify/cli-kit": "3.22.1",
    "@shopify/shopify-cli-extensions": "3.21.0",
    "abort-controller": "^3.0.0",
    "chokidar": "3.5.3",
    "diff": "^5.1.0",
    "esbuild": "0.15.7",
    "http-proxy": "^1.18.1",
    "serve-static": "1.15.0",
    "ws": "8.8.1",
    "lodash-es": "^4.17.21"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shopify/cli/edit/main/packages/app"
  }
}
