{
  "name": "@shopify/app",
  "version": "0.5.2",
  "private": false,
  "description": "Utilities for loading, building, and publishing apps.",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners"
  ],
  "license": "MIT",
  "types": "dist/index.d.ts",
  "files": [
    "/templates",
    "/dist",
    "/npm-shrinkwrap.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b tsconfig.dist.json",
    "build:watch": "tsc -b tsconfig.dist.json --watch",
    "prepublishOnly": "yarn run build",
    "lint": "prettier -c src/** && eslint src/**",
    "lint:fix": "prettier src/** && eslint src/** --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc -b --incremental"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5"
  },
  "peerDependencies": {
    "@shopify/core": "0.5.2",
    "@shopify/support": "0.5.2"
  },
  "devDependencies": {
    "@shopify/core": "0.5.2",
    "@shopify/support": "0.5.2"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ]
  }
}
