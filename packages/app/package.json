{
  "name": "@shopify/app",
  "version": "3.0.4",
  "description": "Utilities for loading, building, and publishing apps.",
  "type": "module",
  "files": [
    "/dist",
    "/templates"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "rimraf dist/ && rollup -c",
    "prepack": "cross-env NODE_ENV=production yarn run build",
    "lint": "prettier -c src/** && eslint 'src/**/*.ts'",
    "lint:fix": "prettier -w src/** && eslint 'src/**/*.ts' --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ]
  },
  "dependencies": {
    "@fastify/reply-from": "^8.0.0",
    "@oclif/core": "1.9.0",
    "@shopify/shopify-cli-extensions": "^0.2.1",
    "fastify": "^4.0.0-rc.4"
  },
  "peerDependencies": {
    "@shopify/cli-kit": "3.0.4"
  },
  "engine-strict": true,
  "engines": {
    "node": "^14.13.1 || ^16.0.0 || ^17.0.0 || ^18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "commands": "dist/commands"
  },
  "devDependencies": {
    "vitest": "0.13.1",
    "ws": "^8.7.0",
    "@fastify/http-proxy": "^8.0.1"
  }
}
