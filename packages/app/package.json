{
  "name": "@shopify/app",
  "version": "2.0.3",
  "description": "Utilities for loading, building, and publishing apps.",
  "type": "module",
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "rimraf dist/ && rollup -c",
    "prepack": "cross-env NODE_ENV=production yarn run build",
    "lint": "prettier -c src/** && eslint 'src/**/*.ts'",
    "lint:fix": "prettier -w src/** && eslint 'src/**/*.ts' --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ]
  },
  "dependencies": {
    "@oclif/core": "1.7.0",
    "@shopify/admin-ui-extensions": "^1.0.1",
    "@shopify/admin-ui-extensions-react": "^1.0.1",
    "@shopify/checkout-ui-extensions": "^0.15.0",
    "@shopify/checkout-ui-extensions-react": "^0.15.0",
    "@shopify/post-purchase-ui-extensions": "^0.13.2",
    "@shopify/post-purchase-ui-extensions-react": "^0.13.2",
    "@shopify/shopify-cli-extensions": "^0.2.0"
  },
  "peerDependencies": {
    "@shopify/cli-kit": "2.0.3",
    "react": ">=17.0.0 <18.0.0"
  },
  "engine-strict": true,
  "engines": {
    "node": "^14.13.1 || ^16.0.0 || ^17.0.0 || ^18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "commands": "dist/commands"
  },
  "devDependencies": {
    "fastify": "^3.29.0",
    "@fastify/http-proxy": "^7.1.0",
    "vitest": "0.10.0"
  }
}
