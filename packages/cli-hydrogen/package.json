{
  "name": "@shopify/cli-hydrogen",
  "version": "1.0.1",
  "private": false,
  "description": "Commands for building Hydrogen storefronts",
  "type": "module",
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "exports": {
    "./commands/hydrogen/init": {
      "import": "./dist/commands/hydrogen/init.js",
      "types": "./dist/commands/hydrogen/init.d.ts"
    }
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "rimraf dist/ && rollup -c",
    "prepack": "cross-env NODE_ENV=production yarn run build",
    "lint": "prettier -c src/** && eslint 'src/**/*.ts'",
    "lint:fix": "prettier src/** -w && eslint 'src/**/*.ts' --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ]
  },
  "dependencies": {
    "@miniflare/cache": "^2.2.0",
    "@miniflare/core": "^2.2.0",
    "@miniflare/runner-vm": "^2.2.0",
    "@miniflare/shared": "^2.2.0",
    "@miniflare/storage-memory": "^2.2.0",
    "@miniflare/web-sockets": "^2.2.0",
    "@types/prettier": "^2.4.4",
    "prettier": "^2.6.1"
  },
  "peerDependencies": {
    "@shopify/cli-kit": "1.0.1",
    "@oclif/core": "1.3.6"
  },
  "devDependencies": {
    "@shopify/cli-testing": "0.30.2",
    "@babel/core": "^7.17.8",
    "@shopify/ast-utilities": "^1.3.4",
    "@shopify/prettier-config": "^1.1.2",
    "@types/change-case": "^2.3.1",
    "@types/connect": "^3.4.35",
    "@types/debug": "^4.1.7",
    "@types/degit": "^2.8.3",
    "@types/faker": "^5.5.7",
    "@types/fs-extra": "^9.0.12",
    "@types/inquirer": "^7.3.3",
    "@types/mime": "^2.0.3",
    "@types/minimist": "^1.2.2",
    "@types/semver": "^7.3.9",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^4.1.2",
    "change-case": "^4.1.2",
    "conf": "^10.1.1",
    "connect": "^3.7.0",
    "cosmiconfig": "^7.0.1",
    "debug": "^4.3.4",
    "degit": "^2.8.4",
    "faker": "^5.5.3",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.0.0",
    "get-port": "^5.1.1",
    "inquirer": "^8.2.2",
    "mime": "^3.0.0",
    "minimist": "^1.2.6",
    "playwright-chromium": "^1.20.1",
    "semver": "^7.3.5",
    "sirv": "^1.0.14",
    "typescript": "^4.2.3",
    "unconfig": "^0.3.1",
    "vite": "^2.9.1",
    "vitest": "0.7.9"
  },
  "engine-strict": true,
  "engines": {
    "node": "^14.13.1 || ^16.0.0 || ^17.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "commands": "dist/commands"
  }
}
