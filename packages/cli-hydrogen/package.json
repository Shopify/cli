  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ]
  },
  "dependencies": {
    "@oclif/core": "1.21.0",
    "@shopify/cli-kit": "3.32.0",
    "@shopify/hydrogen": "0.26.0",
    "@shopify/mini-oxygen": "0.2.0",
    "@shopify/prettier-config": "1.1.2",
    "@types/prettier": "2.6.3",
    "fast-glob": "3.2.11",
    "fs-extra": "11.1.0",
