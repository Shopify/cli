{
  "name": "@shopify/cli-hydrogen",
  "version": "3.5.0",
  "private": false,
  "description": "Commands for building Hydrogen storefronts",
  "bugs": {
    "url": "https://github.com/Shopify/cli/issues"
  },
  "homepage": "https://github.com/shopify/cli#readme",
  "type": "module",
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "exports": {
    "./commands/hydrogen/init": {
      "import": "./dist/commands/hydrogen/init.js",
      "types": "./dist/commands/hydrogen/init.d.ts"
    }
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "rimraf dist/ && tsc -b ./tsconfig.build.json",
    "prepack": "cross-env NODE_ENV=production yarn run build && cp ../../README.md README.md",
    "lint": "prettier -c src/** && eslint \"src/**/*.ts\"",
    "lint:fix": "prettier src/** -w && eslint 'src/**/*.ts' --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.cjs"
    ]
  },
  "dependencies": {
    "@oclif/core": "^1.0.0",
    "@shopify/hydrogen": "^0.26.0",
    "@shopify/mini-oxygen": "^0.1.0",
    "@types/prettier": "^2.6.3",
    "prettier": "^2.6.1",
    "vite": "^2.9.9",
    "@shopify/cli-kit": "3.5.0",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.0.0",
    "typescript": "^4.7.4",
    "@shopify/prettier-config": "^1.1.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "vitest": "^0.17.1"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=14.13.1"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "oclif": {
    "commands": "dist/cli/commands"
  }
}
