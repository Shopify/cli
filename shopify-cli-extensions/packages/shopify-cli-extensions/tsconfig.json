{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2019",
    "rootDir": "./src",
    "outDir": "./",
    "allowJs": false,
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "*": ["@types/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
