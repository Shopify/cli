{
  "targetDefaults": {
    "clean": {
      "dependsOn": [
        "^clean"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "production",
        "^production"
      ]
    },
    "refresh-manifests": {
      "dependsOn": [
        "build",
        "refresh-readme"
      ]
    },
    "refresh-readme": {
      "dependsOn": [
        "build"
      ]
    },
    "lint": {},
    "lint:fix": {
      "dependsOn": [
        "build"
      ]
    },
    "type-check": {
      "dependsOn": [
        "^build"
      ]
    },
    "bundle": {
      "dependsOn": [
        "build"
      ]
    }
  },
  "extends": "@nx/workspace/presets/npm.json",
  "npmScope": "@shopify",
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nx/workspace/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "build:code",
          "build:types",
          "graphql-codegen:generate:business-platform",
          "graphql-codegen:generate:partners",
          "graphql-codegen:generate:webhooks",
          "graphql-codegen:postfix",
          "graphql-codegen:formatting"
        ],
        "runtimeCacheInputs": [
          "node bin/cache-inputs.js || node ../../bin/cache-inputs.js || node ../bin/cache-inputs.js"
        ]
      }
    }
  },
  "defaultBase": "main",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "sharedGlobals": [],
    "production": [
      "default"
    ]
  }
}
