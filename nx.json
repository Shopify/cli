{
  "extends": "@nrwl/workspace/presets/npm.json",
  "npmScope": "@shopify",
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/workspace/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build"
        ]
      }
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "targetDefaults": {
    "clean": {
      "dependsOn": ["^clean"]
    },
    "build": {
      "dependsOn": ["clean", "^build"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "lint:fix": {
      "dependsOn": ["build"]
    },
    "tsc": {
      "dependsOn": ["^build"]
    }
  }
}
