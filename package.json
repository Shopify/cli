{
  "private": true,
  "type": "module",
  "scripts": {
    "prerelease": "bin/prerelease.js",
    "upload-sourcemaps": "bin/upload-sourcemaps.js",
    "features": "cucumber-js -p default",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "tsc": "yarn workspaces run tsc",
    "clean": "yarn workspaces run clean"
  },
  "devDependencies": {
    "@bugsnag/source-maps": "^2.3.0",
    "@changesets/cli": "^2.19.0",
    "@cucumber/cucumber": "^8.0.0-rc.2",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@shopify/eslint-plugin": "^41.0.1",
    "@shopify/prettier-config": "^1.1.2",
    "@shopify/typescript-configs": "^5.1.0",
    "@types/cucumber": "^7.0.0",
    "@types/node": "^17.0.8",
    "@types/rimraf": "^3.0.2",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "cross-env": "^7.0.3",
    "cucumber-junit-formatter": "^0.2.2",
    "cucumber-pretty": "^6.0.1",
    "esbuild": "^0.14.11",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^40.0.0",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.11",
    "pathe": "0.2.0",
    "picocolors": "^1.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.66.1",
    "rollup-plugin-esbuild": "^4.8.2",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-strip-shebang": "^1.2.10",
    "shx": "^0.3.3",
    "tempy": "^2.0.0",
    "tmp": "^0.2.1",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.0",
    "vitest": "^0.2.5"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@shopify/typescript",
      "plugin:@shopify/prettier",
      "plugin:@shopify/node"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "no-console": "error",
      "@typescript-eslint/no-namespace": "off",
      "@typescript-eslint/no-var-requires": "off",
      "import/no-cycle": "off",
      "callback-return": "off",
      "no-undefined": "off",
      "require-await": "off",
      "node/no-deprecated-api": "off",
      "import/no-extraneous-dependencies": "off"
    }
  },
  "prettier": "@shopify/prettier-config"
}
