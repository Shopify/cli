{
  "private": true,
  "type": "module",
  "scripts": {
    "prerelease": "bin/prerelease.js",
    "update-bugsnag": "bin/update-bugsnag.js",
    "graph": "nx graph",
    "shopify": "nx build cli-main && node packages/cli-main/bin/dev.js",
    "shopify:run": "node packages/cli-main/bin/dev.js",
    "create-app": "nx build create-app && node packages/create-app/bin/dev.js",
    "create-hydrogen": "nx build create-hydrogen && node packages/create-hydrogen/bin/dev.js",
    "clean": "nx run-many --target=clean --all --skip-nx-cache && nx reset",
    "lint": "nx run-many --target=lint --all --skip-nx-cache",
    "lint:affected": "nx affected --target=lint --all",
    "lint:fix": "nx run-many --target=lint:fix --all --skip-nx-cache",
    "lint:fix:affected": "nx affected --target=lint:fix --all",
    "test": "nx run-many --target=test --all --skip-nx-cache",
    "test:affected": "nx affected --target=test --all",
    "tsc": "nx run-many --target=tsc --all --skip-nx-cache",
    "tsc:affected": "nx affected --target=tsc --all",
    "build": "nx run-many --target=build --all --skip-nx-cache",
    "build:affected": "nx affected --target=build --all",
    "refresh-templates": "nx run-many --target=refresh-templates --all --skip-nx-cache"
  },
  "devDependencies": {
    "@shopify/cli": "workspace:*",
    "@shopify/app": "workspace:*",
    "@shopify/theme": "workspace:*",
    "@shopify/cli-hydrogen": "workspace:*",
    "@shopify/cli-kit": "workspace:*",
