{
  "private": true,
  "type": "module",
  "scripts": {
    "prerelease": "bin/prerelease.js",
    "// FIXME why postinstall": "we work around this issue https://github.com/egoist/rollup-plugin-esbuild/issues/329",
    "postinstall": "patch-package",
    "upload-sourcemaps": "bin/upload-sourcemaps.js",
    "graph": "nx graph",
    "shopify": "nx build cli && packages/cli/bin/dev.js",
    "shopify:run": "packages/cli/bin/dev.js",
    "create-app": "nx build create-app && packages/create-app/bin/dev.js",
    "create-hydrogen": "nx build create-hydrogen && packages/create-hydrogen/bin/dev.js",
    "clean": "nx run-many --target=clean --all --skip-nx-cache && nx reset",
    "lint": "nx run-many --target=lint --all --skip-nx-cache",
    "lint:affected": "nx affected --target=lint --all",
    "lint:fix": "nx run-many --target=lint:fix --all --skip-nx-cache",
    "lint:fix:affected": "nx affected --target=lint:fix --all",
    "test": "nx run-many --target=test --all --skip-nx-cache",
    "test:affected": "nx affected --target=test --all",
    "tsc": "nx run-many --target=tsc --all --skip-nx-cache",
    "tsc:affected": "nx affected --target=tsc --all",
    "build": "nx run-many --target=build --all --skip-nx-cache",
    "build:affected": "nx affected --target=build --all",
    "refresh-templates": "nx run-many --target=refresh-templates --all --skip-nx-cache"
  },
  "devDependencies": {
    "@bugsnag/source-maps": "^2.3.0",
    "@changesets/cli": "^2.22.0",
    "nx": "^14.0.1",
    "@nrwl/eslint-plugin-nx": "^14.0.5",
    "@nrwl/js": "^14.0.5",
    "@nrwl/tao": "^14.0.1",
    "@nrwl/workspace": "^14.0.1",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@shopify/eslint-plugin": "^41.2.0",
    "@shopify/typescript-configs": "^5.1.0",
    "@types/node": "^17.0.30",
    "@types/rimraf": "^3.0.2",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.17.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.34",
    "eslint": "^8.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-no-catch-all": "^1.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-rulesdir": "^0.2.1",
    "eslint-plugin-unicorn": "^40.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.11",
    "patch-package": "^6.4.7",
    "pathe": "0.2.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.71.1",
    "rollup-plugin-dts": "^4.2.0",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-strip-shebang": "^1.2.10",
    "shx": "^0.3.3",
    "tmp": "^0.2.1",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.4"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "fixtures/*"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "bracketSpacing": false,
    "trailingComma": "all",
    "semi": false,
    "printWidth": 120
  }
}
