    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-rulesdir": "^0.2.1",
    "eslint-plugin-unicorn": "^40.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.0.0",
    "graphql": "^15.0.0",
    "nx": "^14.0.5",
    "patch-package": "^6.4.7",
    "pathe": "0.2.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "shx": "^0.3.3",
    "tmp": "^0.2.1",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.7.4",
    "vite": "^2.9.9"
